                        <li><a href="#/lodging" ng-click="mobileNav = !mobileNav">Lodging</a></li>
                        <li><a href="#/gifts" ng-click="mobileNav = !mobileNav">Gifts</a></li>
                        <li><a href="#/guestbook" ng-click="mobileNav = !mobileNav">Guestbook</a></li>
                    </ul>
                </div>
                <ng-view></ng-view>
            </div>
        </div>
    </div>
