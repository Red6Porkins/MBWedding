@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matt and Brittney's Wedding</title>

    @Styles.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/css")
    <link href='http://fonts.googleapis.com/css?family=Fredericka+the+Great|Cinzel+Decorative|Macondo' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,500,700,700italic' rel='stylesheet' type='text/css'>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/controllers")
    @Scripts.Render("~/bundles/directives")
</head>
<body ng-app="mbsite">
    <div id="PageContainer" class="container-fluid" ng-controller="pageController">        
        <div class="row">
            <div class="LeftSide col-md-2 hidden-sm hidden-xs">
                <div class="SideNav">
                    <h1><a href="#/">B + M</a></h1>
                    <ul>
                        <li><a href="#/ourstory">Our Story</a></li>
                        <li><a href="#/gallery">Gallery</a></li>
                        <li><a href="#/weddingparty">Wedding Party</a></li>
                        <li><a href="#/info">When & Where</a></li>
                        <li><a href="#/lodging">Loding</a></li>
                        <li><a href="#/gifts">Gifts</a></li>
                        <li><a href="#/guestbook">Guestbook</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12 MainCol col-xs-12 col-md-9">
                <nav class="navbar navbar-default visible-xs visible-sm" role="navigation">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" ng-click="navbarCollapsed = !navbarCollapsed">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">
                            <!-- your branding here -->
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" collapse="navbarCollapsed">
                        <ul class="nav navbar-nav Center">
                            <li><a href="#/ourstory">Our Story</a></li>
                            <li><a href="#/gallery">Gallery</a></li>
                            <li><a href="#/weddingparty">Wedding Party</a></li>
                            <li><a href="#/info">When & Where</a></li>
                            <li><a href="#/lodging">Loding</a></li>
                            <li><a href="#/gifts">Gifts</a></li>
                            <li><a href="#/guestbook">Guestbook</a></li>
                        </ul>
                    </div>
                </nav>
                <ng-view></ng-view>
            </div>
        </div>
    </div>
</body>
</html>

