    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,500,700,700italic' rel='stylesheet' type='text/css'>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/controllers")
    @Scripts.Render("~/bundles/directives")
    @Scripts.Render("~/bundles/services")

</head>
<body ng-app="mbsite">
    <div id="PageContainer" class="container-fluid" ng-controller="pageController">
        <div class="row">
            <div class="LeftSide col-md-2 hidden-sm hidden-xs">
                <div class="SideNav">
                    <h1><a href="#/">B + M</a></h1>
