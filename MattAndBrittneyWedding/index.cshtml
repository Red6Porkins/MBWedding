@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matt + Brittney</title>

    <link rel="shortcut icon" href="/app/assets/img/heart-icon.png" type="image/x-icon">
